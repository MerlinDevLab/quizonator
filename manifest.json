{
    "manifest_version": 3,
    "name": "Quizonator Lite",
    "version": "1.0",
    "description": "Простий генератор флеш-карток із веб-сторінок.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }